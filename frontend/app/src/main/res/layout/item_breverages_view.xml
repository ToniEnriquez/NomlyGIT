<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="145dp">
        <com.google.android.material.card.MaterialCardView
            app:cardCornerRadius="22dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/coffeeImage"
                android:layout_width="120dp"
                android:layout_height="145dp"
                android:scaleType="centerCrop"
                android:src="@drawable/coffeeimage1" />
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="59dp"
            android:layout_height="28dp"
            app:cardCornerRadius="22dp"
            android:backgroundTint="#FF8730"
            android:layout_gravity="center|bottom">
            <TextView
                android:id="@+id/coffeeRating"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/star"
                android:textColor="#fff"
                android:textAlignment="center"
                android:textSize="16sp"
                android:gravity="center"
                android:text="4.5"/>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="28dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/coffeeName"
            android:text="Creamy Mocha Ome Coffee "
            android:textColor="@color/text_color_black"
            android:fontFamily="@font/medium"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/coffeeTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tea, Lemon"
            android:textColor="#6A6A6A"
            android:textSize="12sp"
            android:fontFamily="@font/semi_bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/coffeePrice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="$12.6"
                android:layout_weight="1"
                android:gravity="bottom"
                android:textColor="@color/text_color_black"
                android:textSize="18sp"
                android:fontFamily="@font/semi_bold"/>

            <com.google.android.material.button.MaterialButton
                android:layout_marginBottom="1dp"
                android:id="@+id/buyCoffee"
                android:layout_width="113dp"
                android:layout_height="50dp"
                android:layout_marginEnd="0dp"
                android:text="Buy"
                app:cornerRadius="22dp"
                android:textColor="@color/color_primary"
                app:icon="@drawable/ic_cart"
                style="@style/button_primary_style"
                app:iconTint="@color/color_primary"
                android:backgroundTint="#E5F5F0" />

        </LinearLayout>




    </LinearLayout>

</LinearLayout>