<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_29">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="16dp"
        android:src="@drawable/arrow_back"
        android:contentDescription="Back" />

    <!-- Actual CardStackView -->
    <com.yuyakaido.android.cardstackview.CardStackView
        android:id="@+id/card_stack_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:id="@+id/swipe_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="645dp"
        android:src="@drawable/swipesymbol" />

    <!-- Like/Dislike Buttons -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/dislikeBtn"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/circlebutton"
            android:src="@drawable/cross_swipe"
            android:contentDescription="Dislike" />

        <ImageButton
            android:id="@+id/likeBtn"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="32dp"
            android:background="@drawable/circlebutton"
            android:src="@drawable/like_swipe"
            android:contentDescription="Like" />
    </LinearLayout>
</RelativeLayout>
