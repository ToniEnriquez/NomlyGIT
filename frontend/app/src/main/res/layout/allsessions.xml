<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="20dp"
    android:orientation="horizontal"
    app:cardBackgroundColor="@color/text_color_white"
    app:cardCornerRadius="20dp"
    app:cardElevation="0.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_color_white"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="3">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="22dp">

                <ImageView
                    android:id="@+id/groupImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/fooddiningsvg"
                    android:foregroundTint="@color/color_secondary"/>
            </com.google.android.material.card.MaterialCardView>

        </FrameLayout>

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sessionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/medium"
                android:text="We gonna lunchy lunchy"
                android:textColor="@color/text_color_black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/groupName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/semi_bold"
                android:text="Toni Fandom"
                android:textColor="@color/color_secondary"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/medium"
                android:text="12 jan 25, tampines, 3pm"
                android:textColor="@color/text_color_black"
                android:textSize="10dp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginTop="5dp"
                app:cornerRadius="5dp"
                android:textSize="10sp"
                android:textAlignment="textStart"
                android:layout_marginStart="0dp"
                style="@style/button_success"
                android:id="@+id/sessionstatus"
                android:text="Ongoing"/>
        </LinearLayout>

