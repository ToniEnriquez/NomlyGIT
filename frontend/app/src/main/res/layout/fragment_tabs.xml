                                android:layout_height="match_parent"
                                android:layout_marginStart="10dp"
                                android:paddingStart="10dp"
                                android:tag="tab"
                                android:paddingEnd="10dp"
                                android:background="@drawable/tab_top"
                                android:gravity="center"
                                android:text="Home"
                                android:textColor="@color/text_color_black"
                                android:textSize="16dp"/>

                            <TextView
                                android:id="@+id/profile"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingStart="10dp"
                                android:tag="tab"
                                android:paddingEnd="10dp"
                                android:gravity="center"
                                android:text="Profile"
                                android:textColor="@color/text_color_black"
                                android:textSize="16dp"/>

                            <TextView
                                android:id="@+id/about"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:tag="tab"
                                android:gravity="center"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:text="About"
                                android:textColor="@color/text_color_black"
                                android:textSize="16dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:background="@drawable/tab_bg_color_primary"
                            android:layout_width="match_parent"
                            android:padding="15dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:textColor="@color/text_color_black"
                                android:layout_height="wrap_content"
                                android:text="I'd be glad to assist you with implementing a swipe-to-delete feature in your RecyclerView. Here's a comprehensive guide that incorporates the best aspects of previous responses and addresses potential issues"
                                />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


