<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="206dp"
    android:layout_height="300dp"
    android:layout_marginEnd="20dp"
    android:gravity="bottom">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="206dp"
            android:layout_height="222dp"
            android:layout_gravity="bottom"
            app:cardBackgroundColor="@color/color_primary"
            app:cardCornerRadius="31dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom"
                android:padding="16dp">

                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title TextView"
                    android:fontFamily="@font/semi_bold"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/priceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="$2.5"
                    android:fontFamily="@font/regular"
                    android:textColor="@android:color/white"
                    android:textSize="24sp" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/priceOrageTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:text="$8"
                        android:fontFamily="@font/light"
                        android:textColor="#6CAE97"
                        android:textSize="16sp" />

                    <com.google.android.material.divider.MaterialDivider
                    android:layout_width="wrap_content"
                    android:layout_alignRight="@+id/priceOrageTextView"
                    android:layout_alignLeft="@+id/priceOrageTextView"
                        android:layout_marginTop="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_height="1dp"
                    app:dividerColor="#6CAE97"/>
                </RelativeLayout>


            </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:scaleType="fitCenter"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="-30dp"
                android:translationZ="1dp"
                android:src="@drawable/ombecap1" />

    </FrameLayout>
</LinearLayout>