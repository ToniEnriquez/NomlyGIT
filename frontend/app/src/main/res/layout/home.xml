<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_primary"
    android:orientation="vertical"
    tools:context=".activity.home">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_view"
            android:name="com.w3itexperts.ombe.fragments.home_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

<com.google.android.material.bottomnavigation.BottomNavigationView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.w3itexperts.ombe.component.NavButton
            android:id="@+id/navHome"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            app:iconSrc="@drawable/ic_home"
            tools:ignore="ResourceCycle" />
        <com.w3itexperts.ombe.component.NavButton
            android:id="@+id/navAllGroups"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            app:iconSrc="@drawable/groupiconsvg"
            tools:ignore="ResourceCycle" />
        <com.w3itexperts.ombe.component.NavButton
            android:id="@+id/accessSessions"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            app:iconSrc="@drawable/groupsessionsvg"
            tools:ignore="ResourceCycle" />
        <com.w3itexperts.ombe.component.NavButton
            android:id="@+id/navProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            app:iconSrc="@drawable/ic_profile"
            tools:ignore="ResourceCycle" />


    </LinearLayout>


</com.google.android.material.bottomnavigation.BottomNavigationView>

</LinearLayout>